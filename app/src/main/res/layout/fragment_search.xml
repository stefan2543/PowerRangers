<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/Release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:text="Release Date"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/morb_release"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Title"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="Title"
        android:textAlignment="center"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/morb_img"
        app:layout_constraintEnd_toStartOf="@id/Release"
        app:layout_constraintBottom_toTopOf="@id/moribius" />

    <ImageView
        android:id="@+id/morb_img"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/Title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/morbius" />

    <TextView
        android:id="@+id/moribius"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Morbius"
        android:translationY="30dp"
        app:layout_constraintStart_toEndOf="@id/morb_img"
        app:layout_constraintTop_toBottomOf="@id/Title"
        app:layout_constraintEnd_toStartOf="@id/morb_release"/>

    <TextView
        android:id="@+id/morb_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4/1/2022"
        android:translationY="30dp"
        app:layout_constraintStart_toEndOf="@id/moribius"
        app:layout_constraintTop_toBottomOf="@id/Release"
        app:layout_constraintEnd_toEndOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>